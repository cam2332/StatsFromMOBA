<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:id="@+id/profile_stats_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearlayout_wins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/wins_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="@string/profile_wins"
                android:textAlignment="textStart"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profile_wins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:textAlignment="textStart"
                android:textSize="30sp" />

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@color/colorBehindPlayerProfileTop" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_winpercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="15dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/wins_percent_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_winspercent"
                android:textAlignment="textStart"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profile_winpercent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textSize="30sp" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@color/colorBehindPlayerProfileTop" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearlayout_kills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/kills_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_kills"
                android:textAlignment="textStart"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profile_kills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textSize="30sp" />

            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@color/colorBehindPlayerProfileTop" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_deaths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="15dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/deaths_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_deaths"
                android:textAlignment="textStart"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profile_deaths"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textSize="30sp" />

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@color/colorBehindPlayerProfileTop" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearlayout_kd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/kd_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_kd"
                android:textAlignment="textStart"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profile_kd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textSize="30sp" />

            <View
                android:id="@+id/divider7"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@color/colorBehindPlayerProfileTop" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_kda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="15dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/kda_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_kda"
                android:textAlignment="textStart"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profile_kda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textSize="30sp" />

            <View
                android:id="@+id/divider6"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@color/colorBehindPlayerProfileTop" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearlayout_killspermatch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/kills_per_match_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_killspermatch"
                android:textAlignment="textStart"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profile_killspermatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textSize="30sp" />

            <View
                android:id="@+id/divider9"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@color/colorBehindPlayerProfileTop" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_killsperminute"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="15dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/kills_per_minute_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_killsperminute"
                android:textAlignment="textStart"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profile_killsperminute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textSize="30sp" />

            <View
                android:id="@+id/divider8"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@color/colorBehindPlayerProfileTop" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearlayout_scorepermatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/score_per_match_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_scorepermatch"
                android:textAlignment="textStart"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profile_scorepermatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textSize="30sp" />

            <View
                android:id="@+id/divider11"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@color/colorBehindPlayerProfileTop" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_scoreperminute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="15dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/score_per_minute_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_scoreperminute"
                android:textAlignment="textStart"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profile_scoreperminute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textSize="30sp" />

            <View
                android:id="@+id/divider10"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@color/colorBehindPlayerProfileTop" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>